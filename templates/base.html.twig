<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Bucket-List{% endblock %}</title>

    {# Utiliser AssetMapper pour les styles #}
    {{ importmap('app') }}

    {# Favicon #}
    <link rel="icon" href="{{ asset('images/favicon.png') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body>
<header class="bg-light p-3">
    <div class="container">
        <div class="d-flex align-items-center">
            <img src="{{ asset('images/logo.png') }}" alt="Logo Bucket-List" height="40">
            <h1 class="ms-3 mb-0">Bucket-List</h1>
        </div>
        <nav class="mt-3">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('main_home') }}">Accueil</a>
                </li>
                {# D'autres liens de navigation pourront être ajoutés ici plus tard #}
            </ul>
        </nav>
    </div>
</header>

<main class="container my-4">
    {% block body %}{% endblock %}
</main>

<footer class="bg-light p-3 text-center">
    <div class="container">
        <p>&copy; Bucket-List {{ "now"|date("Y") }}</p>
    </div>
</footer>

{% block javascripts %}{% endblock %}
</body>
</html>